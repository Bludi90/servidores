#!/usr/bin/env bash
set -euo pipefail
IF="${WG_IF:-wg0}"
echo "## Servicio"; systemctl --no-pager --full status "wg-quick@${IF}" || true
echo; echo "## ip_forward"; sysctl net.ipv4.ip_forward
echo; echo "## Socket"; ss -ulpn | grep -E "wg|:51820" || true
echo; echo "## wg show (antes)"; wg show || true
echo; echo "## Reinicio suave"; wg-quick down "${IF}" 2>/dev/null || true; wg-quick up "${IF}"; sleep 1
echo; echo "## wg show (despu√©s)"; wg show || true
