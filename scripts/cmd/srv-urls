#!/usr/bin/env bash
set -euo pipefail

# Resolver la ruta real del script siguiendo symlinks
SCRIPT_PATH="$(readlink -f "${BASH_SOURCE[0]}")"
# scripts/cmd/ → repo raíz (dos niveles arriba)
REPO_DIR="$(cd "$(dirname "$SCRIPT_PATH")/../.." && pwd)"

cd "$REPO_DIR"

if [[ ! -f common/urls-proxy.tsv ]]; then
  echo "ERROR: no encuentro $REPO_DIR/common/urls-proxy.tsv" >&2
  exit 1
fi

# Mostrar la tabla de URLs alineada
column -t -s$'\t' common/urls-proxy.tsv
